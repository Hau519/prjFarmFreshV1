<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/imgBannerProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:rotation="180"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bg1" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="71dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_black"
                android:gravity="center"
                android:text="Order"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tvLblId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:text="Order number: "
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="63dp"
                android:layout_toEndOf="@id/tvLblId"
                android:text="....."
                android:layout_alignBaseline="@id/tvLblId"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvLblDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLblId"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="29dp"
                android:text="Date order: "
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent" />


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginStart="38dp"
                android:layout_marginTop="138dp"
                android:layout_toEndOf="@+id/tvLblId"
                android:text="....."
                android:layout_alignBaseline="@id/tvLblDate"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/lvProducts"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_above="@+id/btnReturn"
                android:layout_below="@+id/tvLblDate"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="224dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLblDate" />

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="164dp"
                android:layout_height="71dp"
                android:layout_below="@+id/tvTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="226dp"
                android:layout_marginTop="463dp"
                android:backgroundTint="@color/black"
                android:padding="10dp"
                android:text="Return"
                android:textSize="23sp" />


        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>