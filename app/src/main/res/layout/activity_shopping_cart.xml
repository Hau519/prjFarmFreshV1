<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg115"
    tools:context=".ShoppingCartActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping Cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="190dp"
        android:textSize="35sp"
        android:textColor="#528534"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:id="@+id/llCartHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        >

        <TextView
            android:id="@+id/textView2"
            style="@style/style_shoppingCartListHeader"
            android:text="IMAGE" />

        <TextView
            android:id="@+id/textView5"
            style="@style/style_shoppingCartListHeader"
            android:text="PRODUCT" />

        <TextView
            android:id="@+id/textView6"
            style="@style/style_shoppingCartListHeader"
            android:text="PRICE" />

        <TextView
            android:id="@+id/textView7"
            style="@style/style_shoppingCartListHeader"
            android:layout_weight="1.5"
            android:text="QUANTITY" />

        <TextView
            android:id="@+id/textView8"
            style="@style/style_shoppingCartListHeader"

            android:text="SUBTOTAL" />

        <TextView
            android:id="@+id/textView10"
            style="@style/style_shoppingCartListHeader"

            android:text="EDIT" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llCartHeader">

    </ListView>

    <TableLayout
        android:id="@+id/tableCartTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvCart"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cart Total" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView16"
                android:text="Cart Subtotal"

                style="@style/style_cartTotalTableData"/>



            <TextView
                android:id="@+id/tvCartSubtotal"
                style="@style/style_cartTotalTableData"

                android:text="$0.00" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                style="@style/style_cartTotalTableData"
                android:text="Shipping" />

            <TextView
                android:id="@+id/tvShipping"
                style="@style/style_cartTotalTableData"
                android:text="Free" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                style="@style/style_cartTotalTableData"
                android:text="QST Tax" />

            <TextView
                android:id="@+id/tvQST"
                style="@style/style_cartTotalTableData"
                android:text="$0.00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView18"
                style="@style/style_cartTotalTableData"
                android:text="GST Tax" />

            <TextView
                android:id="@+id/tvGST"
                style="@style/style_cartTotalTableData"
                android:text="$0.00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView20"
                style="@style/style_cartTotalTableData"
                android:text="Total" />

            <TextView
                android:id="@+id/tvTotal"
                style="@style/style_cartTotalTableData"
                android:text="$.00" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_pressed"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="Continue Shopping"
        android:textColor="#17371A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="Checkout"
        android:textColor="#17371A"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/button_pressed"
        android:backgroundTint="@android:color/holo_green_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>