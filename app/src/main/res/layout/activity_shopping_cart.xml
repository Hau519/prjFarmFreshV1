<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg115"
    tools:context=".ShoppingCartActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping Cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="190dp"
        android:textSize="35sp"
        android:textColor="#528534"
        android:textStyle="bold|italic"/>

    <ListView
        android:id="@+id/lvCart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

    </ListView>

    <Button
        android:id="@+id/btnCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:text="Continue Shopping"
        android:padding="10dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#17371A"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_pressed"
        android:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tcSubtotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubTotal:"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
         />

    <TextView
        android:id="@+id/tcSubtotalLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QST"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/tvSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tcSubtotalLabel"
        app:layout_constraintStart_toEndOf="@id/tcSubtotalLabel"
        android:layout_marginLeft="20dp"
         />

    <TextView
        android:id="@+id/tvSubtotal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tcSubtotalLabel2"
        app:layout_constraintStart_toEndOf="@id/tcSubtotalLabel2"
        android:layout_marginLeft="60dp"

        />

    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="Checkout"
        android:textColor="#17371A"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/button_pressed"
        android:backgroundTint="@android:color/holo_green_light"/> />

</androidx.constraintlayout.widget.ConstraintLayout>