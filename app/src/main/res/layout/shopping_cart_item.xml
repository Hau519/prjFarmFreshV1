<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imProduct"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="1dp"
            app:srcCompat="@drawable/vegetables"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/tvProductName"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            style="@style/style_shoppingCartListHeader"
            android:text="Tomato"
            />

        <TextView
            android:id="@+id/tvProductPrice"
            style="@style/style_shoppingCartListHeader"
            android:text="1.99"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/imPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_plus_button"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edProductQuantity"
            style="@style/style_shoppingCartListHeader"
            android:layout_weight="0.5"
            android:ems="1"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:inputType="number|textNoSuggestions"
            android:text="3"
            android:enabled="false"
            android:background="@null"




            />

        <ImageButton
            android:id="@+id/imMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/icon_minus_button" />

        <TextView
            android:id="@+id/tvProductTotal"
            style="@style/style_shoppingCartListHeader"
            android:text="5.97"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_btn"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>