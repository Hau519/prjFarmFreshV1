<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imProduct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/vegetables"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/tvProductName"
            style="@style/style_shoppingCartListHeader"
            android:text="Tomato"
            />

        <TextView
            android:id="@+id/tvProductPrice"
            style="@style/style_shoppingCartListHeader"
            android:text="1.99" />

        <ImageButton
            android:id="@+id/imPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_plus_button"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edProductQuantity"
            style="@style/style_shoppingCartListHeader"
            android:layout_weight="0.5"
            android:textSize="12sp"
            android:ems="1"
            android:inputType="number"
            android:text="3"
            android:enabled="false"

            />
<!--        <EditText-->
<!--            android:id="@+id/edProductQuantity"-->
<!--            style="@style/style_shoppingCartListHeader"-->
<!--            android:layout_weight="0.5"-->
<!--            android:textSize="12sp"-->
<!--            android:ems="1"-->
<!--            android:inputType="number|textNoSuggestions"-->
<!--            android:text="3"-->
<!--            android:enabled="false"-->
<!--            android:background="@null"-->
<!--            />-->
        <ImageButton
            android:id="@+id/imMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/icon_minus_button" />

        <TextView
            android:id="@+id/tvProductTotal"
            style="@style/style_shoppingCartListHeader"
            android:text="5.97" />

        <Button
            android:id="@+id/btnEdit"
            style="@style/style_shoppingCartListHeader"
            android:text="Edit"
            android:textAllCaps="false"

            android:background="@drawable/button_pressed"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>