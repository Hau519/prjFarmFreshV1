<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imProduct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"

            app:srcCompat="@drawable/vegetables"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tvProductName"
            style="@style/style_shoppingCartListHeader"

            android:text="Tomato"
            android:textSize="14dp"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/tvProductPrice"
            style="@style/style_shoppingCartListHeader"
            android:layout_gravity="center"
            android:text="1.99"
            android:textSize="14dp"
            />

        <ImageButton
            android:id="@+id/imPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/icon_plus_button"
            />

        <EditText
            android:id="@+id/edProductQuantity"
            style="@style/style_shoppingCartListHeader"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@null"

            android:ems="1"

            android:inputType="number|textNoSuggestions"
            android:text="3"
            android:textSize="14dp"
            android:enabled="false"




            />

        <ImageButton
            android:id="@+id/imMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/icon_minus_button"
            />

        <TextView
            android:id="@+id/tvProductTotal"
            style="@style/style_shoppingCartListHeader"
            android:layout_gravity="center"
            android:text="5.97"
            android:textSize="14dp"
            />

        <Button
            android:id="@+id/btnEdit"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_btn"
            android:tag="edit"

            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"


           />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>