<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutus"
    tools:context=".ui.aboutUs.AboutUsFragment">

<!--    design for about us//-->


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="40sp"
        android:textColor="#DCDEE6"
        android:textStyle="bold|italic"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/textGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@id/tvTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="#D9DEE3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:text="Many Quebec farms offer exciting on-farm activities,
 ranging from pick-your-own to agri-tainment
  (e.g. wagon rides, corn mazes, etc.).Coupled with the fact that many quebecers are including
  local food in their diets and supporting quebec farmers,
  itâ€™s no wonder that more and more consumers
    are visiting Quebec farms for the fresh produce,
   family fun and unique experience.

   Farm fresh is one of the such farm supporting platform.

" />


</androidx.constraintlayout.widget.ConstraintLayout>